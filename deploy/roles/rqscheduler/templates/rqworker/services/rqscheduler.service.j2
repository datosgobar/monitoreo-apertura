[Unit]
Description=Rqscheduler
After=network.target

[Service]
User={{ worker_user }}
Group={{ worker_group }}
WorkingDirectory={{ application_dir }}
ExecStart={{ run_rqscheduler_bin }}
ExecReload=/bin/kill -s HUP $MAINPID
ExecStop=/bin/kill -s TERM $MAINPID
PrivateTmp=true
Restart=on-failure

[Install]
WantedBy=multi-user.target
